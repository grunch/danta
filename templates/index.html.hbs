  <div class="container">
    <div class="mt-5 d-flex justify-content-evenly align-items-center">
        <div>
          <h1>Lightning Hackday</h1>
        </div>
        <div>
          <img id="bolt" src = "/public/svg/lightning.svg" />
        </div>
    </div>
    <div id="attendee-form" class="collapse">
      <div class="row">
        <p class="text-center">Ingrese sus datos para registrarse</p>
      </div>
      <form autocomplete="off" class="row mt-3 g-3" id="form">
        <div class="col">
          <div class="form-floating mb-3">
            <input type="text" id="firstname" placeholder="Juan" class="form-control" required>
            <label for="firstname">Nombre</label>
          </div>
          <div class="form-floating mb-3">
            <input type="text" id="lastname" placeholder="Trueno" class="form-control" required>
            <label for="lastname">Apellido</label>
          </div>
          <div class="form-floating mb-3">
            <input type="email" id="email" class="form-control" placeholder="juan@trueno.com" required>
            <label for="email">Email</label>
          </div>

          <div class="mb-3">
            <button type="submit" class="btn btn-primary">Enviar</button>
          </div>
        </div>
      </form>
    </div>

